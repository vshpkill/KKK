<resources>

    <!-- Base application theme. -->
    <style name="MMaterialTheme" parent="MyMaterialTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/pink5</item>
        <item name="colorAccent">@color/yellow3</item>
    </style>
    <style name="MyMaterialTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/pink5</item>
        <item name="colorAccent">@color/yellow3</item>
    </style>

    <style name="AnimationPopup">
        <item name="android:windowEnterAnimation">@anim/scale_on</item>
        <item name="android:windowExitAnimation">@anim/scale_off</item>
    </style>
    <style name="BaseText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:shadowDx">-1</item>
        <item name="android:shadowDy">-1</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowRadius">2</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
